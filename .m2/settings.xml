name: configuring settings.xml

on:
  push:
    branches: [main]

jobs:
  build:

    runs-on: [self-hosted, medium, telia-managed, Linux, X64]

    steps:
      - name: Check out Code
        uses: actions/checkout@v2

      - name: Set up Java
        uses: actions/setup-java@v1
        with:
          java-version: 1.8
          
      - name: Install Maven
        run: sudo apt update && sudo apt install maven -y

      - name: Set up Maven
        uses: telia-actions/generate-maven-settings@v20
        with: 
          path: ~/.m2/settings.xml
      - name: Print settings.xml
        run: cat /home/runner/.m2/settings.xml
